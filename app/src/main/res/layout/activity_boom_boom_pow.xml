<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.michael.roboticdrinkmaker.BoomBoomPow"
    android:background = "@drawable/boomboompow">

    <Button
        android:id="@+id/make_boomboompow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:text="Make Drink"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />




    <TableLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:shrinkColumns="*"  android:stretchColumns="*"
        android:layout_alignStart="@+id/make_boomboompow"
        android:layout_marginStart="54dp">

        <!-- Row 1 with single column -->
        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:layout_marginTop="75dp"
            >

            <TextView
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:id="@+id/custom"
                android:textSize="25dp" android:text="Ingredients"  android:layout_span="2"
                android:padding="5dip"
                android:textColor="#FFFFFF"/>

        </TableRow>

        <!-- Row 2 with 3 columns -->

        <TableRow

            android:layout_height="wrap_content"
            android:layout_width="match_parent">
            <TextView
                android:id="@+id/custom1"
                android:textSize="20sp"
                android:text="Vodka:"
                android:layout_weight="1"
                android:textColor="#FFFFFF"
                />
            <TextView
                android:id="@+id/text1"
                android:layout_weight="1"
                android:textColor="#FFFFFF"
                />
        </TableRow>
        <TableRow

            android:layout_height="wrap_content"
            android:layout_width="match_parent">
            <TextView
                android:id="@+id/custom2"
                android:textSize="20sp"
                android:text="Gin"
                android:layout_weight="1"
                android:textColor="#FFFFFF"
                />
            <TextView
                android:id="@+id/text2"
                android:layout_weight="1"
                android:textColor="#FFFFFF"
                />
        </TableRow>
        <TableRow

            android:layout_height="wrap_content"
            android:layout_width="match_parent">
            <TextView
                android:id="@+id/custom3"
                android:textSize="20sp"
                android:text="Rum:"
                android:layout_weight="1"
                android:textColor="#FFFFFF"
                />
            <TextView
                android:id="@+id/text3"
                android:layout_weight="1"
                android:textColor="#FFFFFF"
                />
        </TableRow>
        <TableRow

            android:layout_height="wrap_content"
            android:layout_width="match_parent">
            <TextView
                android:id="@+id/custom4"
                android:textSize="20sp"
                android:text="Tequila: "
                android:layout_weight="1"
                android:textColor="#FFFFFF"
                />
            <TextView
                android:id="@+id/text4"
                android:layout_weight="1"
                android:textColor="#FFFFFF"
                />
        </TableRow>
        <TableRow

            android:layout_height="wrap_content"
            android:layout_width="match_parent">
            <TextView
                android:id="@+id/custom5"
                android:textSize="20sp"
                android:text="Midori:"
                android:layout_weight="1"
                android:textColor="#FFFFFF"
                />
            <TextView
                android:id="@+id/text5"
                android:layout_weight="1"
                android:textColor="#FFFFFF"
                />
        </TableRow>
        <TableRow

            android:layout_height="wrap_content"
            android:layout_width="match_parent">
            <TextView
                android:id="@+id/custom6"
                android:textSize="20sp"
                android:text="Malibu:"
                android:layout_weight="1"
                android:textColor="#FFFFFF"
                />
            <TextView
                android:id="@+id/text6"
